<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>WelcomePageServlet</servlet-name>
        <servlet-class>portal.WelcomePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservePageServlet</servlet-name>
        <servlet-class>portal.reserve.ReservePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAvailibilityServlet</servlet-name>
        <servlet-class>portal.reserve.UpdateAvailibilityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JobSelectionServlet</servlet-name>
        <servlet-class>portal.reserve.JobSelectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FulltimePageServlet</servlet-name>
        <servlet-class>portal.fulltime.FulltimePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReserveSelectionServlet</servlet-name>
        <servlet-class>portal.fulltime.ReserveSelectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerPageServlet</servlet-name>
        <servlet-class>portal.manager.ManagerPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlushRequestsServlet</servlet-name>
        <servlet-class>portal.manager.FlushRequestsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomePageServlet</servlet-name>
        <url-pattern>/WelcomePageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservePageServlet</servlet-name>
        <url-pattern>/ReservePageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAvailibilityServlet</servlet-name>
        <url-pattern>/UpdateAvailibilityServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JobSelectionServlet</servlet-name>
        <url-pattern>/JobSelectionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FulltimePageServlet</servlet-name>
        <url-pattern>/FulltimePageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReserveSelectionServlet</servlet-name>
        <url-pattern>/ReserveSelectionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerPageServlet</servlet-name>
        <url-pattern>/ManagerPageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlushRequestsServlet</servlet-name>
        <url-pattern>/FlushRequestsServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>WelcomePage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
